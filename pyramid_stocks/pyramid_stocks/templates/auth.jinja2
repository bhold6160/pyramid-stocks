{% extends "base.jinja2" %}

{% block content %}
<h2 id="login">Register</h2>
<form id="form_id" method="POST" name="myform" class="loginLabel" action="{{request.route_url('auth')}}">
    <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token()}}">
    <label>User Name :</label>
    <input type="text" name="username" id="username" />
    <label>E-mail :</label>
    <input type="email" name="email" id="email" />
    <label>Password :</label>
    <input type="password" name="password" id="password" />
    <input type="submit" name="submit" value="Login" id="submit" onclick="validate()" />
</form>

<h2 id="login">Login</h2>
<form id="form_id" method="GET" name="myform" class="loginLabel" action="{{request.route_url('auth')}}">
    <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token()}}">
    <label>User Name :</label>
    <input type="text" name="username" id="username" />
    <label>Password :</label>
    <input type="password" name="password" id="password" />
    <input type="submit" name="submit" value="Login" id="submit" onclick="validate()" />
</form>
{% endblock content %}